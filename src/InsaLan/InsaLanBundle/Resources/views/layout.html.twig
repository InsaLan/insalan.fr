            <img src="{{ asset('bundles/insalan/img/logo-noyear-downscaled.png') }}" alt="InsaLan"/>
          </a>
        </div>

        {% block top_infos %}
        <div class="input">
          <nav>              
            <ul>
              {% if app.user %}
                {% if is_granted('ROLE_ADMIN') %}
                  <li><a href="{{ path('insalan_tournament_merchant_index') }}" class="btn2 bnt2-ncolor">Billetterie</a></li>
                  <li><a href="{{ path('insalan_admin_default_index') }}" class="btn2 bnt2-ncolor">Admin</a></li>
                  <li><a href="{{ path('sonata_admin_dashboard') }}" class="btn2 bnt2-ncolor">Sonata</a></li>
                  <!-- Change the route to user dashboard once set up -->
                  <li><a href="{{ path('insalan_tournament_user_index') }}" class="btn2 btn2-nocolor">Mon compte</a></li>
                {% elseif is_granted('ROLE_MERCHANT') %}
                  <li><a href="{{ path('insalan_tournament_merchant_index') }}" class="btn2 bnt2-ncolor">Billetterie</a></li>
                  <li><a href="{{ path('insalan_tournament_user_index') }}" class="btn2 btn2-nocolor">Mon compte</a></li>
