              {% endif %}#}
              <li{% if page == 'insalan_archives_default_index' %} class="active"{% endif %}>
                <a href="{{ path('insalan_archives_default_index') }}">Archives</a>
              </li>
              {#<li><a href="{{ path('insalan_news_default_forum') }}">Forum</a></li>#}
              {#<li><a href="{{ path('insalan_pizza_default_index') }}">Pizzas</a></li>#}
            </ul>
          </nav>
        </div>
        {% endblock %}
      
      </div>
    </header>
