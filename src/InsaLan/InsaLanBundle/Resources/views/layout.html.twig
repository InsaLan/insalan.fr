                {% endif %}
                <li><a href="{{ path('fos_user_security_logout') }}" class="btn2">D√©connexion</a></li>
              {% else %}
                <li><a href="{{ path('insalan_tournament_user_index') }}" class="btn2 btn2-nocolor">Connexion</a></li>
                <li><a href="{{ path('fos_user_registration_register') }}" class="btn2">Inscription</a></li>
              {% endif %}
            </ul>
          </nav>
        </div>

        {% set page = app.request.get('_route') %}
        <div class="navbar">
          <nav>
            <ul>
              <li{% if page == 'insalan_news_default_index' %} class="active"{% endif %}>
                <a href="{{ path('insalan_news_default_index') }}">Accueil</a>
              </li>
              <li class="dropdown {% if page in [
                  'insalan_information_default_wwwh',
                  'insalan_information_default_tournament',
                  'insalan_information_default_public',
                  'insalan_information_default_asso'
