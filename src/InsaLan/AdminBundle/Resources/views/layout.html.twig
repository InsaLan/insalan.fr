<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    {% block stylesheets %}
      {% stylesheets
        'bundles/insalan/css/pizza.css'
        'bundles/insalan/css/global.css'
        'bundles/insalan/css/admin.css'
        filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
      {% endstylesheets %}
    {% endblock %}

    <link href="{{ asset('bundles/insalan/img/favicon.png') }}" rel="icon" type="image/png"/>
    <link href="//fonts.googleapis.com/css?family=PT+Sans%7COpen+Sans:300%7COswald" rel="stylesheet" type="text/css"/>

    <title>{% block title %}InsaLan{% endblock %}</title>

    <!--[if lt IE 9]>
      <script src="{{ asset('bundles/insalan/js/html5shiv.js') }}"></script>
    <![endif]-->
  </head>

  <body id="body">

    {% block main_header %}

    <header>
      <div class="container">
        <div class="logo">
          <div class="pattern"></div>
          <a href="{{ path('insalan_news_default_index') }}">
            <img src="{{ asset('bundles/insalan/img/logo-noyear.png') }}" alt="InsaLan"/></a>
        </div>

        {% block top_infos %}
        <aside>
            <div class="input">
                <!-- TODO Choose which buttons need to be here -->
                <a href="{{ path('fos_user_security_logout') }}" class="btn2 pull-right" style="margin-left: 10px;">Déconnexion</a>
                <a href="{{ path('sonata_admin_dashboard') }}" class="btn2 bnt2-ncolor pull-right" style="margin-left: 10px;">Sonata</a>
            </div>
        </aside>

        <nav>
          <h1 style="text-align: center; font-size: 40px; font-weight: bold; color: #FFF; font-family: OpenSansCond">Admin</h1>
          <ul>
            <li><a href="{{ path('insalan_admin_default_index') }}">Accueil</a></li>
            <li class="dropdown">
              <a href="javascript:void(0)">Tournois</a>
              <div class="dropdown-content">
                <a href="{{ path('GroupStageAction') }}">Phases de poule</a>
                <a href="{{ path('GroupAction') }}">Poules</a>
                <a href="{{ path('MatchAction') }}">Matchs</a>
              </div>
            </li>
            <li class="dropdown">
              <a href="javascript:void(0)" class="dropbtn">Pizzas</a>
              <div class="dropdown-content">
                <a href="{{ path('insalan_pizza_admin_commande') }}">Commandes</a>
                <a href="{{ path('insalan_pizza_admin_creneau') }}">Créneaux</a>
                <a href="{{ path('insalan_pizza_admin_pizza') }}">Pizzas</a>
              </div>
            </li>
            <li><a href="{{ path('insalan_ticketing_admin_index') }}">Billetterie</a></li>
          </ul>
        </nav>
        {% endblock %}
      </div>
    </header>
    {% endblock %}

    <section class="container-admin">
      {% for message in app.session.flashbag.get('info') %}
        <p class="alert-info">{{ message }}</p>
      {% endfor %}

      {% for message in app.session.flashbag.get('error') %}
        <p class="alert-error">{{ message }}</p>
      {% endfor %}

      {% block body %}{% endblock %}


      <div class="clear"></div>
    </section>

    {% block rawbody %}{% endblock %}

    {% block main_bottom %}{% endblock %}

    {% block javascripts %}
      {% javascripts
        'bundles/insalan/js/mootools-core-1.4.5.js'
        'bundles/insalan/js/admin.js' %}
          <script type="text/javascript" src="{{ asset_url }}"></script>
          <script type="text/javascript">

          </script>
      {% endjavascripts %}
    {% endblock %}
  </body>
</html>
