{% extends 'InsaLanAdminBundle::layout.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}

    <article>
      <header>
        <h2>Gestion des Phases de poules</h2>
      </header>

    <div class="create">
        <h2>Création d'une nouvelle phase de poules</h2>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>

    <section style="margin-top:40px">
      <strong>Liste des phases :</strong> (Du plus récent au plus ancien)

      <table>
          <tr>
              <th>Name</th>
              <th>Tournament</th>
              <th>Actions</th>
          </tr>
          {% for groupStage in groupStages %}
              <tr>
                  <td>{{ groupStage.name }}</td>
                  <td>{{ groupStage.tournament }}</td>
                  <td>
                      <a class="btn-plain" href = {{ path('GroupStageModifyAction', {'id': groupStage.id }) }}>Modifier</a>
                      <a class="btn-plain" href = {{ path('GroupStageRemoveAction', {'id': groupStage.id }) }}>Supprimer</a>
                  </td>
              </tr>
          {% endfor %}
      </table>
    </section>
  </article>

    <style>
        .input.left input, .input.left button, .input.left select {
            margin-left: 0px;
        }

        .create {
            float: right;
            width: 40%;
        }

        table {
            background-color: rgba(23, 23, 23, 0.8);
            margin: 20px;
        }

        td, th, tr {
            border: 1px solid #393939;
            padding: 6px;
            vertical-align: middle;
            text-align: center;
        }

        tr:nth-child(even){background-color: rgba(23, 23, 23, 0.4);}
        tr:hover {background-color: rgba(23, 23, 23, 0.0);}

        th {
            padding-top: 12px;
            padding-bottom: 12px;
            background-color: #00bff3;
            color: white;
        }
    </style>
{% endblock %}
