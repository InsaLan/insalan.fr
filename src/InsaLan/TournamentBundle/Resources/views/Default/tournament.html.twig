{% block title %}
  {{ parent() }} - {{ t.name }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 'bundles/insalan/css/tournament2.css' filter='cssrewrite' %}
      <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block rawbody %}
{{ parent() }}
  <header class="game">
    <div class="container">
      <img style="height:100px" src="{{ asset(t.getUploadDir() ~ t.logoPath) }}" alt="Logo"/>
      {{ t.name }}
    </div>
  </header>

  <div class="container">
    {% if stages|length == 0 and knockouts|length == 0 %}
    <section>
      <p>Aucun match n'est disponible.</p>
      {% if t.isPending() %}
      <p>Ce tournoi débutera le {{ t.tournamentOpen | date("d/m à H:i") }}.</p>
      {% endif %}
    </section>
    {% endif %}
    <section class="results bg-{{ t.type }}">
      <section class="matchs">
        {% for s in stages %}
          {% for g in s.groups %}
            <table class="matchs" id="matchs{{ g.id }}">
              {% set matchFound = false %}
              {% for m in g.matches %}
                {% if constant('InsaLan\\TournamentBundle\\Entity\\Match::STATE_FINISHED') == m.state %}
                {% set matchFound = true %}
                <tr data-mid="{{ m.id }}" class="match">
                  <td>{{ m.part1.name }}</td>
                  <td>
                    {{ m.score1 }}-{{ m.score2 }}
                  </td>
                  <td>{{ m.part2.name }}</td>
                </tr>
                {% endif %}
              {% endfor %}
              {% if not matchFound %}
              <tr>
                <th colspan="3" style="text-align: center; padding: 7px; font-style: italic">
                  Aucune information disponible
                </th>
              </tr>
              {% endif %}
            </table>
          {% endfor %}
        {% endfor %}
      </section>

      <section class="tabs">
        <nav>
            <ul>
            {% for s in stages %}
            <li><a href="#" class="tablink" data-type="stage" data-target="{{ s.id }}">{{ s.name }}</a></li>
            {% endfor %}
            {% for k in knockouts %}
              <li><a href="#" class="tablink" data-type="knockout" data-target="{{ k.id }}">{{ k.name }}</a></li>
            {% endfor %}

          </ul>
          <div class="clear"></div>
        </nav>
        {% for s in stages %}
        <div class="groups" id="stage{{ s.id }}" style="display: none;">
          {% for g in s.groups %}
          <table class="group" data-gid="{{ g.id }}">
            <tr>
              <th>{{ g.name }}</th>
              <th>W</th>
              <th>L</th>
            </tr>
            {% for p in g.participants %}
            <tr>
              <td><a href="{{ path('insalan_tournament_default_teamdetails', {id: p.id}) }}">{{ p.name }}</a></td>
              <td>{{ g.stats[p.id].won }}</td>
              <td>{{ g.stats[p.id].lost }}</td>
            </tr>
            {% endfor %}
          </table>
          {% endfor %}
          <div class="clear"></div>
        </div>
        {% endfor %}

        {% for k in knockouts %}
        <div class="groups" id="knockout{{ k.id }}" style="display: none;">

            <div id="bracketContainer_{{ k.id }}">
            </div>

            <div class="clear"></div>
        </div>

        {% endfor %}
      </section>
      <div class="clear"></div>
    </section>
  </div>

  <section class="match-details">
    <div class="container" style="display: none">
      <header>
        <div class="team">
          <h3></h3>
          <div class="details">
            <span class="rank">
              Rank: <span></span>
            </span>
            <span class="won"></span> -
            <span class="lost"></span>
          </div>
        </div>
        <div class="score">&nbsp;</div>
        <div class="team">
          <h3></h3>
          <div class="details">
            <span class="rank">
              Rank: <span></span>
            </span>
            <span class="won"></span> -
            <span class="lost"></span>
          </div>
        </div>
      </header>

      <section class="rounds">
        <nav>
          <ul>
            <li class="disabled" data-rid="0">-</li>
            <li class="disabled" data-rid="1">-</li>
            <li class="disabled" data-rid="2">-</li>
            <li class="disabled" data-rid="3">-</li>
            <li class="disabled" data-rid="4">-</li>
          </ul>
        </nav>
        <div class="download clear g1">
          <a href="#">Télécharger le Replay</a>
        </div>
      </section>


      <table id="team100">
        <caption></caption>
        <tr>
          <th>Joueur</th>
          <th>Champion</th>
          <th>K/D/A</th>
          <th>Summoners</th>
          <th>Items</th>
          <th class="gold">Gold</th>
          <th class="cs">CS</th>
        </tr>
        <tr id="champ-template" style="display: none">
          <td class="name"></td>
          <td class="champion">
            <span class="champ"></span>
            <div class="lvl">
              LVL<br/>
              <span class="level"></span>
            </div>
          </td>
          <td class="kda"></td>
          <td class="spells">
            <span class="spell0"></span>
            <span class="spell1"></span>
          </td>
          <td class="items">
            <span class="item0"></span>
            <span class="item1"></span>
            <span class="item2"></span>
            <span class="item3"></span>
            <span class="item4"></span>
            <span class="item5"></span>
            <span class="item6"></span>
          </td>
          <td class="gold"></td>
          <td class="cs"></td>
        </tr>
      </table>

      <table id="team200">
        <caption></caption>
        <tr>
          <th>Joueur</th>
          <th>Champion</th>
          <th>K/D/A</th>
          <th>Summoners</th>
          <th>Items</th>
          <th class="gold">Gold</th>
          <th class="cs">CS</th>
        </tr>
      </table>
    </div>
  </section>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {% javascripts
    'bundles/insalan/js/tournament.js'
    'bundles/insalan/data/champion.js'
    'bundles/insalan/data/item.js'
    'bundles/insalan/data/summoner.js'
  %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
  {% endjavascripts %}


  <script type="text/javascript">
    loadMatch.url = '{{ path('insalan_tournament_default_matchdata', {id:'__id__'}) }}';
    loadRound.replayUrl = '{{ asset('') }}';

    window.addEvent('domready', function() {
      var matches = $$('table.matchs');
      var groups  = $$('table.group');
      var tabs    = $$('section.tabs .groups');

      if(tabs.length > 0) {
        tabs[0].show();
        buildTrees();
      }

      if (matches.length > 0) {
        groups[0].addClass('active');
        matches.hide();
        matches[0].show();

        groups.addEvent('click', function() {
          var gid = parseInt(this.dataset.gid);
          $$('table.matchs').hide();
          $$('table.group').removeClass('active');
          $('matchs' + gid).show();
          $(this).addClass('active');
        });
      } else {
        $$("section.matchs").hide();
      }

      {#var target = $$('.match-details .container')[0];
      matches = $$('table.matchs tr.match');
      matches.addEvent('click', function() {
        var mid = parseInt(this.dataset.mid);
        loadMatch(mid, target);
        new Fx.Scroll(window).toElement(target);
        $$('table.matchs tr.match').removeClass('active');
        $(this).addClass('active');
      });

      $$('.rounds nav ul li').addEvent('click', function() {
        if ($(this).hasClass('disabled')) {
          return;
        }

        loadRound(target, this);
      });#}

    });
  </script>
  
  <script>
  function buildTrees() {
  {% for k in knockouts %}
    (function($) {
        $('#bracketContainer_{{ k.id }}').bracket({
          init:  {{ k.jsonData|raw }},
          skipConsolationRound: true,
          {% if k.doubleElimination %}
          skipSecondaryFinal: true
          {% endif %}
        });
    })(jQuery);
  {% endfor %}
  }
  </script>

  <script>
      (function($) {
        $(".tablink").click(function() { 
            $(".groups").hide();
            var targetId = $(this).data('target');
            var targetType = $(this).data('type');
            $("table.matchs").hide();
            $("#"+targetType+targetId).show();
            if(targetType === "stage") {
              $("section.matchs").show();
              $("#matchs"+targetId).show();
            } else {
              $("section.matchs").hide();
              buildTrees();
            }
            return false;
        });
    })(jQuery);
  </script>

{% endblock %}
