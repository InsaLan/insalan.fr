{% extends 'InsaLanArchivesBundle::layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets 'bundles/insalan/css/archives.css' %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% stylesheets 'bundles/insalan/css/tournament.css' filter='cssrewrite' %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}

{% block body %}
{{ parent() }}

<header>
  <h1 style="text-align:center; font-size:40px; margin-top: 18px">Ann√©e {{year}}</h1>
</header>

<br/><hr/><br/>



{% if streams is not empty %}
<article class="info">
  <aside>
    <div class="square">
      <a href="#body"><span></span></a>
    </div>
  </aside>


  <header>
    <h2>Streams</h2>
  </header>

  <section>
    <div class="picture-list ">

      {% for s in streams %}
      <div>
        <iframe width="854" height="480" src="{{ s.url }}" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe>
      </div>

      {% endfor %}
    </div>

  </section>
</article>
{% endif %}

{% endblock %}
