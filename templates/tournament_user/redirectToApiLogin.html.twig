{% extends 'tournament_user/layout.html.twig' %}

{% block body %}
{{ parent() }}

<article>
  <aside>
    <div class="square">
      <a href="#body"><span></span></a>
    </div>
  </aside>

  <header>
    <h2>Inscription à &laquo; {{ tournament.name }} &raquo;</h2>
    {{ tournament.description }}
  </header>

  <section>
    {% if tournament.loginType != "" %}
      <div class="text" style="text-align: center">
        <br/>
        <p>
          Vous devez renseigner votre identifiant
          <strong>
            {% if tournament.loginType == constant('InsaLan\\UserBundle\\Service\\LoginPlatform::PLATFORM_BATTLENET') %} Battle.net {% endif %}
            {% if tournament.loginType == constant('InsaLan\\UserBundle\\Service\\LoginPlatform::PLATFORM_STEAM') %} Steam {% endif %}
          </strong>
          pour participer à ce tournoi.
        </p>
        <br/>
        <div>
          {% if tournament.loginType == constant('InsaLan\\UserBundle\\Service\\LoginPlatform::PLATFORM_BATTLENET') %}
            <a href="{{ path('app_user_registerbattlenet') }}" class="btn btn-primary">
              Renseigner votre identifiant
            </a>
          {% endif %}
          {% if tournament.loginType == constant('InsaLan\\UserBundle\\Service\\LoginPlatform::PLATFORM_STEAM') %}
            <a href="{{ path('app_user_registersteamid') }}" class="btn btn-primary">
              Renseigner votre identifiant
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </section>
</article>
{% endblock %}
