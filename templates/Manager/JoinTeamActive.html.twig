{% if error %}
<div class="frame frame-danger">
  <header class="full">
    <div class="step pull-left">
      {{ counter }}
    </div>
    <div class="title pull-left">
      Rejoindre une équipe existante
    </div>
    <br class="clear">
  </header>
  <div class="text">
    <p>{{ error }}</p>
  </div>
{% else %}
<div class="frame frame-active">
  <header class="full">
    <div class="step pull-left">
      {{ counter }}
    </div>
    <div class="title pull-left">
      Rejoindre une équipe existante
    </div>
    <br class="clear">
  </header>
{% endif %}

{{ form_start(form) }}

  {{ form_widget(form._token) }}
  {{ form_errors(form) }}

  <div class="input field">
    {{ form_widget(form.name, {'attr': {'placeholder': 'Nom de l\'équipe que vous voulez rejoindre'}}) }}
  </div>

  <div class="input field">
    {{ form_widget(form.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
  </div>

  <a class="btn btn-danger ctrl grid-2 pull-left" href="{{ path('app_tournament_manager_setname', {tournament: tournament.id}) }}">
    Annuler
  </a>
  <a class="btn btn-primary ctrl grid-8 pull-left" href="javascript:{}" onclick="document.getElementById('step4').submit();">
    Rejoindre mon équipe
  </a>
  <br class="clear">
{{ form_end(form) }}
</div>
