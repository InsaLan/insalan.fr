                  <li><a href="{{ path('app_information_salesterms') }}">Conditions g√©n√©rales<br/> de vente</a></li>
                  <li><a href="#tarteaucitron">Gestion des<br/> cookies</a></li>
                </ul>
              </li>
            </ul>
          </nav>
        </div>

        <div class="logo">
          <ul>
            <li>
              <a href="http://aeir.insa-rennes.fr/">
                <img src="{{ asset('/public/img/partners-preview/aeir.png') }}" alt="AEIR" />
              </a> 
            </li>
            <li>
              <a href="http://www.insa-rennes.fr">
                <img src="{{ asset('/public/img/partners-preview/insa-rennes.png') }}" alt="INSA Rennes"/>
              </a>
            </li>
          </ul>
        </div>
        {% endblock %}
        
        <div class="copyright">
          <ul>
            <li>¬© 2014-2019 InsaLan</li>
            <li><span>|</span></li>
            <li>Design by <a href="https://www.alecahain.fr/">Aceltis</a></li>
